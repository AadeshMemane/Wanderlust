<%if(success && success.length) {%>
<div
  class="alert mt-2 mb-0 alert-success alert-dismissible fade show col-6 offset-3 flash"
  role="alert"
>
  <%=success%>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<%}%> <%if(error && error.length) {%>
<div
  class="alert mt-2 mb-0 alert-danger alert-dismissible fade show col-6 offset-3 flash"
  role="alert"
>
  <%=error%>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<%}%>
