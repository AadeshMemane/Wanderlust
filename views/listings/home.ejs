<% layout('/layouts/boilerplate.ejs') -%>
<body>
  <!-- Carousel -->
  <div id="travelCarousel" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img
          src="https://upload.wikimedia.org/wikipedia/commons/thumb/0/09/Mumbai_Aug_2018_%2843397784544%29.jpg/1200px-Mumbai_Aug_2018_%2843397784544%29.jpg"
          class="d-block w-100"
          alt="Mumbai"
        />
      </div>
      <div class="carousel-item">
        <img
          src="https://images.pexels.com/photos/1603650/pexels-photo-1603650.jpeg"
          class="d-block w-100"
          alt="Taj Mahal"
        />
      </div>
      <div class="carousel-item">
        <img
          src="https://dynamic-media-cdn.tripadvisor.com/media/photo-o/21/fe/fe/b3/polo-orchid-resort-cherrapunji.jpg?w=1200&h=-1&s=1"
          class="d-block w-100"
          alt="Cherrapunji"
        />
        <div class="carousel-caption d-none d-md-block">
          <h5>Cherrapunji</h5>
          <p>The land of rain and clouds.</p>
        </div>
      </div>
      <div class="carousel-item">
        <img
          src="https://media.cntraveler.com/photos/643d5d0a5722b1af03793a06/16:9/w_2560%2Cc_limit/Dal%2520Lake_GettyImages-1323846766.jpg"
          alt="Resort Stay"
        />
      </div>
      <div class="carousel-item">
        <img
          src="https://t4.ftcdn.net/jpg/06/24/97/25/360_F_624972566_xKN0h03F11tHNfqlo3k7nTC5IHrBN4N8.jpg"
          class="d-block w-100"
          alt="Beach Resort"
        />
        <div class="carousel-caption d-none d-md-block">
          <h5>Kerala Resort</h5>
          <p>Land of God.</p>
        </div>
      </div>
      <div class="carousel-item">
        <img
          src="https://media.meer.com/attachments/8507a4d67a2d6c38ec30e81cca64997244ba2a5b/store/fill/1090/613/82d5cbea2917df623eb8fb15f4cbf034becfeb773c4ff1212cbe1274b737/The-stunning-beach-of-Goa.jpg"
          alt="Beach Resort"
        />
        <div class="carousel-caption d-none d-md-block">
          <h5>Goa Beach</h5>
          <p>Place to celebrate..</p>
        </div>
      </div>
      <div class="carousel-item">
        <img
          src="https://i0.wp.com/www.tusktravel.com/blog/wp-content/uploads/2023/02/Himachal-Pradesh-in-March-1.webp?fit=1920%2C1080&ssl=1"
          alt="Beach Resort"
        />
        <div class="carousel-caption d-none d-md-block">
          <h5>Himachal Pradesh</h5>
          <p>Place to celebrate..</p>
        </div>
      </div>
    </div>
    <button
      class="carousel-control-prev"
      type="button"
      data-bs-target="#travelCarousel"
      data-bs-slide="prev"
    >
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button
      class="carousel-control-next"
      type="button"
      data-bs-target="#travelCarousel"
      data-bs-slide="next"
    >
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>

